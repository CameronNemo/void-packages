distfiles="${homepage}/archive/${version}/${pkgname}-${version}.tar.gz"
checksum=7c7f696060a82669cb9c73cf0ec1d07d4ffefbfd54fc60acad0179ca3f46716d
nostrip="yes" # Stripping binaries doesn't work in ARM, Remove once fixed.
