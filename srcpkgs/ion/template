# Template file for 'ion'
pkgname=ion
version=1.0.5
revision=3
build_style=cargo
short_desc="Ion Shell, written in Rust"
maintainer="Muhammad Herdiansyah <herdiansyah@opmbx.org>"
license="MIT"
